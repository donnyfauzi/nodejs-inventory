<h1 style="text-align: center;">Master Produk</h1>
<hr>

<a href="/master-produk/tambah"><button class="btn btn-sm btn-primary mt-4"><i class="fa fa-plus"></i> Tambah Produk</button>
</a>

<% if (req.query.note == 'sukses') { %>
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        <strong><i class="fa-solid fa-check-circle me-1"></i><%= req.query.pesan %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if (req.query.note == 'gagal') { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong><i class="fa-solid fa-exclamation-triangle me-1"></i>Gagal, cek terminal</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>


<div class="row" style="margin-top: 30px;">
    <% for (const i in produk) { %>
        <div class="col-lg-3">
            <div class="card" style="background-color: cadetblue;">
                <div class="card-body">
                    <h5 class="card-title"><%= produk[i].nama %></h5>
                    <h6 class="badge bg-dark"><%= produk[i].kode %></h6>
                    <p class="card-text"><%= produk[i].deskripsi %></p>
                    <a href="#" class="btn btn-sm btn-outline-dark float-end mx-1">
                        <i class="fa-solid fa-fw fa-edit"></i>
                    </a>
                    <a href="#" class="btn btn-sm btn-outline-dark float-end mx-1">
                        <i class="fa-solid fa-fw fa-eye"></i>
                    </a>
                </div>
            </div>
        </div>
    <% } %>
</div>

